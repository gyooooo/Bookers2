<div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
    <%= render partial: 'books/form', locals: { user: @user, book: @book } %>
    </div>
    
    <div class="col-md-8 offset-md-1"> 
     <h2>Users</h2>
      <table class="table table-hover table-inverse">
       <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
         </tr>
       </thead>
       
       <tbody>
       <% @users.each do |user| %>
        <tr>
         <td>
          <%= link_to image_tag(user.get_profile_image(60,60)), user_path(user.id) %>
         </td>
         <td>
          <%= user.name %>
         </td>
         <td>
          <%= link_to "Show", user_path(user.id) %></td>
        </tr>
       <% end %>
       </tbody>
       </table>
       </div>
    </div>
   </div>
</div>
