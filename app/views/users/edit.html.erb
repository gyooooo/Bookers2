<div class="container">
  <div class="row">
    <div class="cpl-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<body>
  
   
  <h1>User info</h1>
  
  <%= form_with model: @user do |f| %>
  
   <div class="form-group">
     <label for="user_name">Name</label>
      <%= f.text_field :name, class: "form-controll name" %>
  </div>
  
  <div class="form-group">
     <label for="user_image">Image</label>
     <%= f.file_field :profile_image, type:"file", class: "form-controll image" %>  
  </div>
  
   <div class="form-group">
     <label for="introduction">Introduction</label>
      <%= f.text_field :introduction, class: "form-controll introduction" %>
  </div>
  
  <div class="form-group">
    <%= f.submit 'Update User', class: "btn btn-secondary" %>
      </div>


<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this book from being saved:>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<% end %>

 <p id="notice"></p>
</body>