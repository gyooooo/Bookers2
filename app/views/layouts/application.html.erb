<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <div class="navbar-header">

      <%= link_to "Bookers", root_path, class: "nav-link text-light" %>
      </div>
      <nav>
         <ul id="navbar" class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        
        <i class="fas fa-home text-light"></i>
        <%= link_to "Home", user_path(current_user.id), class: "nav-link text-light"  %>
        
        <i class="fas fa-users text-light"></i>
        <%= link_to "Users", users_path, class: "nav-link text-light" %>
        
        <i class="fas fa-book-open text-light"></i>
        <%= link_to "Books", books_path, class: "nav-link text-light" %>
        
        <i class="fas fa-sign-out-alt text-light"></i>
        <%= link_to "Log out", destroy_user_session_path, class: "nav-link text-light", method: :delete %>
        
       <% else %>
        <i class="fas fa-home text-light"></i>
        <%= link_to "Home", root_path, class: "nav-link text-light" %>
        
        <i class="fas fa-link text-light"></i>
        <%= link_to "About", about_path, class: "nav-link text-light" %>
        
        <i class="fas fa-user-plus text-light"></i>
        <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-light" %>
        
        <i class="fas fa-sign-in-alt text-light"></i>
        <%= link_to "Log in", new_user_session_path, class: "nav-link text-light", method: :delete %>
        <% end %>
         </ul>
      </nav>
      </div>
    </header>


   <main>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
        </div>
    <% end %>
    <%= yield %>
    </main>
    
     <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
  </body>
</html>